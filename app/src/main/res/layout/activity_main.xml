<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ice_pbru.khamhor.sirikwan.ice_database.MainActivity"
    android:background="@drawable/bg3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:textSize="@dimen/H1"
        android:nestedScrollingEnabled="false"
        android:onClick="clickRegis"
        android:background="#94f8bee4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:textSize="@dimen/H1"
        android:layout_alignParentRight="true"
        android:background="#94f8bee4"
        android:onClick="clickIn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="250dp"
        android:background="#85f5aae6"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:src="@drawable/ic3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            android:textSize="@dimen/H2"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:hint="username" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editText7"
            android:textSize="@dimen/H2"
            android:gravity="clip_horizontal|center_horizontal"
            android:layout_margin="20dp"
            android:hint="Password" />

    </LinearLayout>
</RelativeLayout>
